<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">User Management System</h1>
        
        <!-- Display Users -->
        <h2 class="mb-3">Current Users</h2>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>User Email</th>
                    <th>Age</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(user => { %>
                <tr>
                    <td><%= user.userUniqueId %></td>
                    <td><%= user.userName %></td>
                    <td><%= user.userEmail %></td>
                    <td><%= user.userAge %></td>
                    <td>
                        <form action="/delete" method="post">
                            <input type="hidden" name="userUniqueId" value="<%= user.userUniqueId %>">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        
        <!-- Add User Form -->
        <h2 class="mt-4">Add User</h2>
        <form action="/" method="post" class="row g-3">
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="User Unique Id" name="userUniqueId" required>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="User Name" name="userName" required>
            </div>
            <div class="col-md-3">
                <input type="email" class="form-control" placeholder="User Email" name="userEmail" required>
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control" placeholder="User Age" name="userAge" required>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        
        <!-- Update User Form -->
        <h2 class="mt-4">Update User</h2>
        <form action="/update" method="post" class="row g-3">
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="User Unique Id" name="userUniqueId" required>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="User Name" name="userName">
            </div>
            <div class="col-md-3">
                <input type="email" class="form-control" placeholder="User Email" name="userEmail">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control" placeholder="User Age" name="userAge">
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
        </form>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>